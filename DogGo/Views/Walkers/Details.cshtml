@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Walker.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.NeighborhoodId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" height=50 width=50 />
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().DogName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Duration)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Walks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) seconds
            </td>
        </tr>
}
    </tbody>
</table>
<h3>Total Walk Time</h3>
<h4>@Model.TotalWalkTime</h4>
